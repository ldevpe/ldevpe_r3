        <script>
            function show(){
                var x = document.getElementById("visible");
                var y = document.getElementById("password");
                var z = document.querySelector("span p");
                if(x.checked === true)
                {
                    y.setAttribute("type","text");
                    z.innerHTML = "hide password";
                }
                else{
                    y.setAttribute("type","password");
                    z.innerHTML = "show password";
                }
            }
        </script>
